{% if page_obj.paginator.num_pages > 1 %}
    <nav aria-label="Pagination">
        <ul class="nav nav--pagination">
            {% if page_obj.has_previous() %}
                <li class="nav--previous">
                    <a class="reverse-underline" href="?page={{ page_obj.previous_page_number }}">
                        <span aria-hidden="true"> < </span>
                        {% trans %}Back{% endtrans %}
                    </a>
                </li>
            {% endif %}

            {% for p in page_obj.page_range %}
                {% if not p %}
                    <li>
                        <span class="nav--no-page">...</span>
                    </li>
                {% elif p == page_obj.number %}
                    <li>
                        <a class="reverse-underline" href="./" aria-current="page">
                            {{ p }}
                        </a>
                    </li>
                {% else %}
                    <li>
                        <a href="?page={{ p }}">{{ p }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {% if page_obj.has_next() %}
                <li class="nav--next">
                    <a class="reverse-underline" href="?page={{ page_obj.next_page_number }}">
                        {% trans %}Next{% endtrans %}
                        <span aria-hidden="true"> > </span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
