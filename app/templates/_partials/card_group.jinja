{# For rendering a group of cards that come as a list/PageQuerySet, not in a Block

Expects:

* pages - The list of Pages
* theme - optional, the default is "default"
#}

<div class="card-group card-group--theme-{{theme|default("default", true)}} contained-width">
    {% if title %}
        <header class="card-group__header">
            {% if title %}<h2 class="card-group__header-title">{{title}}</h2>{% endif %}
        </header>
    {% endif %}
    <ul class="grid-cols grid--{% if pages|length is divisibleby 3 %}3-col{% else %}two-col{% endif %}">
        {% for page in pages %}
            {% include "_partials/card.jinja" %}
        {% endfor %}
    </ul>
</div>
