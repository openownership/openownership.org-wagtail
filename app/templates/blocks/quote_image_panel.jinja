<div class="quote-panel quote-panel--image quote-panel--{{value.layout}} quote-panel--{{value.image_shape}}">
    <div class="contained-width">
        <div class="quote-panel__text">
            <h2 class="quote-panel__quote">{{value.quote}}</h2>
            {{render_cta(value.cta, 'btn')}}
        </div>
        <div class="quote-panel__image">
            {% include 'svg/masks/regular--left.jinja' %}
            {% if value.layout == 'left' %}{% include 'svg/bg_bubbles/coral--small.jinja' %}{% else %}{% include 'svg/bg_bubbles/green.jinja' %}{% endif %}
            {{image(value.image, 'fill-695x421', class='shape-' ~ value.image_shape)}}
            {% if value.layout == 'left' %}{% include 'svg/bg_bubbles/yellow.jinja' %}{% else %}{% include 'svg/bg_bubbles/blue.jinja' %}{% endif %}
        </div>
    </div>
</div>
