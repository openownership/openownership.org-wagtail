{% extends 'base_article.jinja' %}

{% block article_content %}

    <p>{{ page.page_title }}</p>

    {% if page.cover_image %}
        {{ picture(page.cover_image, 200, 300, alt="Cover") }}
    {% endif %}

    {% include "_partials/taxonomies.jinja" %}

    {% if page.summary %}
        <h2>{% trans %}Summary{% endtrans %}</h2>
        {{ page.summary|richtext }}
    {% endif %}

    {% if page.outcomes %}
        <h2>{% trans %}Key Learning Outcomes{% endtrans %}</h2>
        {{ page.outcomes|richtext }}
    {% endif %}

    {% if page.impact %}
        <h2>{% trans %}Benefit / Impact{% endtrans %}</h2>
        {{ page.impact|richtext }}
    {% endif %}

    {% with next_page=page.get_next_page() %}
        {% if next_page %}
            <p>
                <a href="{{ next_page.url }}">{% trans %}Next page{% endtrans %}: {{ next_page.title }}</a>
            </p>
        {% endif %}
    {% endwith %}

{% endblock article_content %}


{% block menu %}
    {% with title="Report contents" %}
        {% include "_partials/page_menu.jinja" %}
    {% endwith %}
{% endblock %}