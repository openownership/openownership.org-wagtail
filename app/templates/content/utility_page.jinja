{% set body_classes = "article-page utility-page" %}
{% set main_classes = "content--article-page" %}
{% extends 'base.jinja' %}

{% block content %}
    {% if page.hero_image %}{{image(page.hero_image, 'fill-1440x360')}}{% endif %}
    <div class="contained-width">
        <div class="article__content">

            {% block content_header %}
                <header class="article__header article__header--utility">
                    {% block content_eyebrow %}{% endblock %}
                    <h1 class="article__title">{{page.title}}</h1>

                    {% block content_meta %}{% endblock %}
                </header>
            {% endblock %}

            <article class="article__body article__body--utility">
                {% block article_body %}
                {{render_stream(page.body)}}
                {% endblock %}
            </article>
        </div>
        {{render_stream(page.additional_content)}}
    </div>
{% endblock %}
