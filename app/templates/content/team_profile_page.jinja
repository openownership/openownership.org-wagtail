{% extends 'content/article_page.jinja' %}

{% block article_body %}

    {% if page.role %}
        <p><strong>{{ page.role }}</strong></p>
    {% endif %}

    {% if page.location %}
        <p>Location: {{ page.location }}</p>
    {% endif %}

    {% if page.email_address %}
        <p>Contact: <a href="mailto:{{ page.email_address }}">{{ page.email_address }}</a></p>
    {% endif %}

    {% if page.portrait_image %}
        {{ picture(page.portrait_image, 200, 300, alt="Portrait of "+page.title) }}
    {% endif %}

    {{render_stream(page.body)}}

    {% if page.authorship %}
        {% with pages=page.authorship.get_content_pages() %}
            {% include "_partials/card_group.jinja" %}
        {% endwith %}
    {% endif %}
{% endblock %}
