{% extends 'base_article.jinja' %}

{% block breadcrumbs %}
    <a href="{{ page.get_parent().get_url() }}">Back to Careers at OO</a>
{% endblock %}


{% block byline %}
    {# No authors on Job Applications, but we do have this: #}
    {% if page.application_deadline %}
        <li>Application deadline: {{ page.human_application_deadline }}</li>
    {% endif %}
{% endblock %}


{% block article_content_end %}
    {% if page.application_url %}
        <p>
            <a href="{{ page.application_url }}">Apply</a>
        </p>
    {% endif %}
{% endblock %}
